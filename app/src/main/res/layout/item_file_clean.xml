<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fileItem"
            type="com.fear.slanderous.talks.dwj.FileItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wj_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_file_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/audio_icon" />

        <LinearLayout
            android:id="@+id/layout_file_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@{fileItem.name}"
                android:textColor="#FF0F2336"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_file_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{fileItem.formattedSize}"
                android:textColor="#FFADB2BA"
                android:textSize="10sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_select_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{fileItem.isSelected ? @drawable/cheak_icon : @drawable/discheak_icon}"/>

    </LinearLayout>
</layout>